extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.border-warning
          .card-body.text-center.py-5
            .mb-4
              i.bi.bi-exclamation-triangle.text-warning(style="font-size: 4rem;")
            
            h3.text-warning.mb-3= title || 'Er ging iets mis'
            
            p.lead.mb-4= message || 'Er is een probleem opgetreden'
            
            .d-flex.flex-column.flex-sm-row.gap-2.justify-content-center
              if backUrl
                a.btn.btn-primary(href=backUrl)
                  i.bi.bi-arrow-left.me-1
                  | Ga terug
              else
                a.btn.btn-primary(href="/staff/dashboard")
                  i.bi.bi-house.me-1
                  | Naar Dashboard
            

  script.
    // Alleen voor bepaalde error types
    if (window.location.search.includes('redirect=true')) {
      setTimeout(function() {
        window.location.href = '/staff/dashboard';
      }, 30000);
    }